---
import { Icon } from "astro-icon/components";
interface Props {
  name: string;
  icon: string;
  href: string;
}
const { name, icon, href } = Astro.props;
const isExternal = href.startsWith("https");
---

<a
  href={href}
  target={isExternal ? "_blank" : "_self"}
  class="items-center group font-semibold gap-1 transform hover:scale-105 transition-transform duration-300 flex justify-start"
>
  <title>{name}</title>
  <span
    class="text-gray-200 sm:text-gray-300 group-hover:text-white flex flex-col sm:flex-row items-center sm:gap-1"
  >
    <Icon name={icon} class="group-hover:fill-white h-6 w-6 sm:h-4 sm:w-4" />
    <span class="inline-block text-xs sm:text-lg">{name}</span>
  </span>
  <div class=`w-0 invisible ${isExternal && 'group-hover:visible'}`>
    <Icon name="external-link" class="w-3 h-3 hover:fill-cyan-700" />
  </div>
</a>
