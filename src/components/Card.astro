---
import { Image } from "astro:assets";
import OpenJournal from "../assets/open journal screenshot.png";
interface Props {
  title: string;
  body: string;
  href: string;
  stack: string[];
}

const { title, body, href, stack } = Astro.props;
---

<li
  class="h-fit group rounded-xl shadow-lg border-2 border-sky-800/50 px-4 py-4 backdrop-blur-2xl bg-[#183f5a]/30 hover:bg-[#a5adb4]/10 hover:scale-105 transition duration-300 ease-in-out hover:cursor-pointer"
>
  <a href={href} class="flex flex-row h-full">
    <Image
      class="rounded-lg w-64 h-full"
      src={OpenJournal}
      alt="Screenshot of The Open Journal website"
    />
    <div class="ml-4 flex flex-col justify-between w-full">
      <div class="">
        <h2 class="text-2xl font-semibold silver-gradient">The Open Journal</h2>
        <p>The open blog of the Internet.</p>
      </div>
      <div class="flex flex-wrap gap-2 mt-4">
        <span class="text-sm">Stack:</span>
        {
          stack.map((item) => (
            <span class="text-sm text-[#a0aec0]">{item}</span>
          ))
        }
      </div>
    </div>
  </a>
</li>
