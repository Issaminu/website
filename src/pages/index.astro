---
import { Image } from "astro:assets";
import IssaminuLogo from "../assets/Issaminu Logo LIGHT.png";
import Layout from "../layouts/Layout.astro";
import NavItem from "../components/NavItem.astro";
---

<Layout title="Issam Boubcher | Distributed Computing Systems student">
  <main
    class="mx-4 relative z-10 grid grid-cols-[1fr,min(640px,100%),1fr] gap-y-8 px-4 pt-48 xl:grid-cols-[1fr,minmax(auto,240px),min(640px,100%),minmax(auto,240px),1fr] xl:gap-x-9 xl:px-0 [&>*]:col-start-2 xl:[&>*]:col-start-3"
  >
    <div class="">
      <!-- <div class="flex md:flex-row md:gap-6 lg:justify-between md:mt-16"> -->
      <div class="flex gap-2 lg:gap-6">
        <Image
          src={IssaminuLogo}
          alt="Issaminu's logo"
          class="rounded-full w-24 h-24"
        />
        <div class="flex flex-col justify-center">
          <h1
            class="text-4xl font-bold w-fit bg-gradient-to-r from-white via-5% to-gray-400 bg-clip-text text-transparent"
          >
            Issam Boubcher
          </h1>
          <p class="text-gray-400 hover:text-white text-lg font-light">
            <span class="sm:hidden"> CS student at</span>
            <span class="hidden sm:inline">
              Distributed Computing Systems student at
            </span>
            <a
              target="_blank"
              href="https://www.enset-media.ac.ma/"
              title="Ecole Normale SupÃ©rieure de l'Enseignement Technique"
            >
              <span
                class="text-gray-450 bg-gray-700 text-sm rounded-sm font-bold tracking-widest select-none hover:bg-sky-800 hover:text-white transition duration-300 ease-in-out"
              >
                &nbsp;ENSET&nbsp;</span
              >
            </a>
          </p>
        </div>
      </div>
      <p class="text-gray-100 text-lg mt-8 text-justify">
        Welcome to my little corner of the internet! Here I chronicle my journey
        and share insights and ideas that have enriched my learning experience.
        This website serves as a hub for my portfolio of projects, my
        reflections the world around me, and the little gems I find on the
        internet.
      </p>
      <div
        class="flex flex-row justify-between sm:justify-start sm:gap-8 items-center mt-6"
      >
        <NavItem name="Blog" icon="newspaper" href="/blog" />
        <NavItem name="Projects" icon="code" href="/projects" />
        <NavItem
          name="Twitter"
          icon="twitter"
          href="https://twitter.com/Issaminuu"
        />
        <NavItem
          name="GitHub"
          icon="github"
          href="https://github.com/Issaminu"
        />
        <NavItem
          name="LinkedIn"
          icon="linkedin"
          href="https://www.linkedin.com/in/issam-boubcher/"
        />
      </div>
    </div>
  </main>
</Layout>
