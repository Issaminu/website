---
import GradientBackground from "../components/GradientBackground.tsx";
import SpeedInsights from "@vercel/speed-insights/astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta content="text/html;charset=utf-8" http-equiv="Content-Type" />
    <meta content="utf-8" http-equiv="encoding" />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta
      name="description"
      content="Issam Boubcher is a Software Engineering and Distributed Computed Systems student at ENSET."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <link
      href="light-mode-favicon.ico"
      rel="icon"
      media="(prefers-color-scheme: light)"
    />
    <link
      href="dark-mode-favicon.ico"
      rel="icon"
      media="(prefers-color-scheme: dark)"
    />
    <meta name="generator" content={Astro.generator} />
    <SpeedInsights />
    <ViewTransitions />
  </head>
  <body
    class="mb-8 relative z-10 grid grid-cols-[1fr,min(640px,100%),1fr] xl:grid-cols-[1fr,minmax(auto,240px),min(640px,100%),minmax(auto,240px),1fr] xl:gap-x-9 xl:px-0 [&>*]:col-start-2 xl:[&>*]:col-start-3"
  >
    <GradientBackground client:idle transition:persist />
    <slot />
    <style is:global>
      @font-face {
        font-family: inter;
        src: url(/fonts/Inter-VariableFont_slnt,wght.woff2);
      }
      html {
        font-family: inter, system-ui, sans-serif;
        background: #212121;
        /* background-size: 224px; */
        color: #d2d4d5;
        cursor: default;
      }

      ::selection {
        background-color: #004576;
      }

      .silver-gradient {
        background-image: linear-gradient(to right, var(--tw-gradient-stops));
        --tw-gradient-from: #fff var(--tw-gradient-from-position);
        --tw-gradient-to: rgb(255 255 255 / 0) var(--tw-gradient-to-position);
        --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to);
        --tw-gradient-via-position: 5%;
        --tw-gradient-to: #9ca3af var(--tw-gradient-to-position);
        background-clip: text;
        color: transparent;
      }

      .silver-gradient::selection {
        color: white;
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }
    </style>
  </body>
</html>
